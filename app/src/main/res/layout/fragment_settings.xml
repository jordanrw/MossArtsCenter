<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mossartscenter.mossartscenterpatrons.Fragments.SettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout">
        <TextView
            android:id="@+id/settings_title"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:paddingLeft="30dp"
            android:paddingTop="25dp"
            android:text="Enable Notifications?"
            android:textAppearance="@android:style/TextAppearance.Material.Body2" />
        <Switch
            android:id="@+id/settings_switch"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight=".75"
            android:layout_marginRight="20dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/settings_notif_descrip"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout"
        android:text="We will notify you when rush tickets are available." />

    <Button
        android:id="@+id/settings_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:backgroundTint="@color/colorPrimary"
        android:text="Log out"
        android:textColor="@android:color/white" />

</RelativeLayout>